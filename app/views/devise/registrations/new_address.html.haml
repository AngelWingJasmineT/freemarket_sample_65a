  .user-new-registration__user-address__forms
    .user-new-registration__user-address__forms__header
      発送元・お届け先住所入力
    .user-new-registration__user-address__forms__menus
      = form_for @address do |f|
        = render "devise/shared/error_messages", resource: @address
        .user-new-registration__user-address__forms__menus__field
          = f.label :postal_code, "郵便番号"
          = f.label :must, "必須", id: "must"
          %br/
          = f.text_field :postal_code, placeholder: "例）123-4567"
        .user-new-registration__user-address__forms__menus__field
          = f.label :prefeture, "都道府県"
          = f.label :must, "必須", id: "must"
          %br/
          = f.text_field :prefeture, placeholder: "北海道"
        .user-new-registration__user-address__forms__menus__field
          = f.label :city, "市区町村"
          = f.label :must, "必須", id: "must"
          %br/
          = f.text_field :city, placeholder: "例）横浜市緑区"
        .user-new-registration__user-address__forms__menus__field
          = f.label :address, "番地"
          = f.label :must, "必須", id: "must"
          %br/
          = f.text_field :address, placeholder: "例）青山1-1-1"
        .user-new-registration__user-address__forms__menus__field
          = f.label :building_name, "建物名"
          %br/
          = f.text_field :building_name, placeholder: "例）柳ビル103"
        .user-new-registration__user-address__forms__menus__actions
          = f.submit "次へ進む", id: "btn"

