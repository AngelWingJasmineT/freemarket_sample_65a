%header.toppage__header
  .toppage__header
    .toppage__header__top
      .toppage__header__logo
        = image_tag("fmarket_logo_red.svg", class: "img", size: "100×100", alt: "mercari")
      .toppage__header__search
        %input{ name: '', class: 'toppage__header__search__form',placeholder: '何かお探しですか？' }
        = icon('fas', 'search', alt: 'search-icon',class: 'topppage__header__search__button')
      

.choice
  .choice__category
    = icon('fas', 'list-ul ', style: 'color:red',class: 'choice__category__icon')
    カテゴリーから探す
  .choice__brand
    = icon('fas', 'tag ',style: 'color:red', class: 'choice__brand__icon')
    ブランドから探す
  .choice__management
    .choice__management__good
      = icon('far', 'heart ',style: 'color:gray', class: 'choice__good__icon')
      いいね！一覧
    .choice__management__information
      = icon('far', 'bell',style: 'color:gray', class: 'choice__infomation__icon')
      お知らせ
    .choice__management__todolist
      = icon('fas', 'check',style: 'color:gray', class: 'choice__todolist__icon')
      やることリスト
    .choice__management__mypage
      = icon('fas', 'user', style: 'color:gray', class: 'choice__mypsge__icon')
      マイページ

.picture1__scroll
  .picture1__scroll__scroll1
