      #main-image= image_tag src="#{@item.images[0].src}", data: {url: "#{@item.images[0].src}"}, size: "260x260"

      .thumbnails-frame
        - @images.each do |image|
          .thumbnails-frame__thumbnail=image_tag src="#{image.src}", data: {url: "#{image.src}"}, size: "50x50"

    %table
