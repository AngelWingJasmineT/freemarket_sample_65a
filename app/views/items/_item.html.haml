.item-list
  .item-list__contents
    .item-list__contents__header
      .item-list__contents__header__title
        新着アイテム
      .item-list__contents__header__more
        = link_to 'もっと見る ＞'

    .item-list__contents__items
      - @items.each do |item|
        .item-list__contents__items__item
          = link_to item_path(item) do
            .item-list__contents__items__item__main
              .item-list__contents__items__item__main__picture
                = image_tag "IMG_0115.jpeg", size: "180x180", alt: "商品写真"
              .item-list__contents__items__item__main__price
                ¥
                = item.price
            .item-list__contents__items__item__name
              = item.name